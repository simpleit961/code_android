<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ssidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="34dp"
        android:text="FP-Guest"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ssidTextView"
        android:layout_below="@+id/placeTV"
        android:layout_marginTop="5dp"
        android:text="108 Fake Street, Singapore"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/getDirectionButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/login_button_background"
        android:text="Get Directions"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addressTV"
        android:layout_below="@+id/getDirectionButton"
        android:layout_marginTop="27dp"
        android:text="Network Details"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addressTV"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="right" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ratedSpeedImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#BEEECA" />

            <TextView
                android:id="@+id/ratedSpeedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratedSpeedImageView"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Fast"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/popularityImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/ic_popular" />

            <TextView
                android:id="@+id/popularityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popularityImageView"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:text="Popular"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/loginImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_lock" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginImageView"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/placeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addressTV"
        android:layout_below="@+id/ssidTextView"
        android:text="Place"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addressTV"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/signalStrengthImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_marker" />

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signalStrengthImageView"
            android:layout_centerInParent="true"
            android:text="10m" />
    </RelativeLayout>

</RelativeLayout>